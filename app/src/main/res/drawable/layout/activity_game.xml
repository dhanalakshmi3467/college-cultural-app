<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game2"
    android:orientation="vertical"
    tools:context="com.example.admin.taarangana.Game">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:text="                    Tell the direction of middle arrow.\n                    Press Start to play. Good Luck! :)" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Shuffle"
        android:layout_marginTop="12dp"
        android:layout_marginStart="130dp"
        android:text="Start" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">


        <ImageView
            android:id="@+id/img1"
            android:layout_marginStart="40dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow1" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow1" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="leftm"
            android:layout_marginStart="90dp"
            android:layout_marginTop="12dp"
            android:text="left" />

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rightm"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:text="right" />
    </LinearLayout>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ef092b"
        android:layout_marginTop="35dp"
        android:layout_marginStart="120dp"
        android:text="Chance =0 \nCorrect=0  :) \nWrong=0   :("
        android:textSize="30dp" />

</LinearLayout>
