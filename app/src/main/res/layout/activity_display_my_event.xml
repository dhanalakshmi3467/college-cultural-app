<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_gradient_color3">

            <ImageView
                android:id="@+id/eventimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/western" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/myEventDetailId"
        android:layout_width="384dp"
        android:layout_height="7dp"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Event Id:   "
        android:textColor="@color/DarkRed"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/myEventDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:text="Mono Acting"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:text="National  Degree College"
        android:textAlignment="center"
        android:textColor="@color/DarkGreen"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/myevent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:text="Event Date and Time"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myEventDetailDate"
            android:layout_width="218dp"
            android:layout_height="47dp"
            android:fontFamily="@font/boogaloo"
            android:text="Sat Sept 15 2020 "
            android:textAlignment="center"
            android:textColor="@color/OrangeRed"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/myEventDetailTime"
            android:layout_width="195dp"
            android:layout_height="36dp"
            android:fontFamily="@font/boogaloo"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/Gray"
            android:textSize="24sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/descriptuion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textAlignment="center"
        android:fontFamily="@font/boogaloo"
        android:textColor="@color/Gray"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/myEventDetailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:text="Amount"
        android:textAlignment="center"
        android:textColor="@color/Gray"
        android:textSize="24sp" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/myEventDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boogaloo"
        android:text="Come...immersive yourself into the Magical Fete with the state of the art perfomances and celebrations"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="24sp" />
    </ScrollView>
    <Button
        android:id="@+id/myEventUnregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Gold"
        android:onClick="FreeEntry"
        android:text="Unregister" />

    <TextView
        android:id="@+id/myEventDetailImageUrl"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:text=""
        android:textColor="@color/Orange"
        android:textSize="20dp"
        android:textStyle="italic" />

    <!-- <Button
         android:id="@+id/registerEvent1"
