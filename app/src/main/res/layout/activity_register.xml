<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containersup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_color1"
    android:orientation="vertical"
    tools:context=".Register"
    android:padding="10dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signedup"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bad_script"
            android:text="         Registration"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtRegNum"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:fontFamily="@font/boogaloo"
            android:imeOptions="actionNext"
            android:hint="Register Number"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/boogaloo"

            android:hint="UserName"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"

            android:hint="Email"
            android:fontFamily="@font/boogaloo"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:imeOptions="actionDone"

            android:hint="Password"
            android:fontFamily="@font/boogaloo"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btnReg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/Gold"
            android:text="Sign up"
            android:fontFamily="@font/boogaloo"
            android:onClick="signUpButton"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/Gold"
            android:text="Already have an Account?         Sign in"
            android:textSize="15dp"
            android:fontFamily="@font/boogaloo"
            android:onClick="signInButton"
            android:textColor="#fff" />


    </LinearLayout>

</LinearLayout>

